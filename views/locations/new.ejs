<%- include('../partials/header') %>
<h2>Add New Location</h2>

<div id="new-form-wrapper">
  <form id="new-form" action="/locations" method="POST">
    <div>
      <label class="new-label">Location Name:</label>
      <input type="text" name="locationName" />
    </div>
    <div>
      <label class="new-label">Address:</label>
      <input type="text" name="locationAddress" />
    </div>
    <div>
      <label class="new-label">Hours:</label>
      <input type="time" name="hoursOfOp" />
      <label class="time-dash"> - </label>
      <input type="time" name="hours-two" />
    </div>
    <div>
      <label class="new-label">Password:</label>
      <input type="text" name="wifiPassword" />
    </div>
    <input id="add-location-button" type="submit" value="Add Location" />
  </form>
</div>
